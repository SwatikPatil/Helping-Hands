<body class="sh_get_background">
<nav id="mainNav" class="nav navbar navbar-expand-md navbar-dark py-0 fixed-top p_nav">
    <a href="/" class="navbar-brand">
      <img src="/stylesheets/images/icons/donation.png" alt="Share4Care" class="p_mainlogo">
    </a>
    <button class="navbar-toggler" data-toggle="collapse" data-target="#mainNavbar" >
      <span class="navbar-toggler-icon">
      </span>
    </button>
    <div class="collapse navbar-collapse" id="mainNavbar">
      <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                    <a href="/" class="nav-link">Home</a>
                </li>
                <% if(!currentUser) { %>
                    <li class="nav-item">
                        <a href="/users/login" class="nav-link">Login</a>
                    </li>
                    <li class="nav-item">
                        <a href="/users/register" class="nav-link">Register</a>
                    </li>
                <% } else {%>
                    <li class="nav-item">
                        <a href="/donate" class="nav-link">Donate</a>
                    </li>
                    <li class="nav-item">
                        <a href="/get" class="nav-link">Request</a>
                    </li>
                    <li class="nav-item">
                        <a href="/users/logout" class="nav-link">Logout</a>
                    </li>
                    <li class="nav-item">
                        <a href="/profile" class="nav-link"><%=currentUser.name%></a>
                    </li>
                <% } %>
      </ul>
    </div>
  </nav>

  <div class="row p-3" style="margin-left: -750px; margin-top: 90px;">
    <div class="col-md-3 m-auto">
      <div class="sh_card_get card-body">
        <h1 class="text-center mb-3 sh_heading">
            REQUEST
        </h1>
        <% include ./partials/messages %>
        <form action="/get" method="POST">
          <div class="form-group">
            <i class="fas fa-book"></i> <label for="book">Books</label>
            <input
              type="book"
              id="book"
              name="book"
              class="form-control sh_txt"
              placeholder="0"
              value="<%= typeof book != 'undefined' ? book : '' %>"
            />
          </div>
          <div class="form-group">
            <img src="/stylesheets/images/icons/sweater_icon.png" alt="" class="img-fluid d-none d-md-inline"> <label for="cloth">Clothes</label>
            <input
              type="clothes"
              id="clothes"
              name="clothes"
              class="form-control sh_txt"
              placeholder="0"
              value="<%= typeof clothes != 'undefined' ? clothes : '' %>"
            />
          </div>
          <div class="form-group">
            <img src="/stylesheets/images/icons/pencil.png" alt="" class="img-fluid d-none d-md-inline"> <label for="stationary">Stationary</label>
            <input
              type="stationary"
              id="stationary"
              name="stationary"
              class="form-control sh_txt"
              placeholder="0"
              value="<%= typeof stationary != 'undefined' ? stationary : '' %>"
            />
          </div>
          <div class="form-group">
            <img src="/stylesheets/images/icons/coins.png" alt="" class="img-fluid d-none d-md-inline"> <label for="money">Money (Rs.) </label>
            <input
              type="money"
              id="money"
              name="money"
              class="form-control sh_txt"
              placeholder="0"
              value="<%= typeof money != 'undefined' ? money : '' %>"
            />
          </div>
          <button type="submit" class="btn sh_btn btn-block">
            REQUEST
          </button>
        </form>
      </div>
    </div>
  </div>
</body>