<br>
<div class="row">
        <div class="col-md-4 m-auto">
          <div class="card card-body a_card">
            <h1 class="text-center mb-3 a_frm">
                Login</h1>
            <% include ./partials/messages %>
            <form action="/users/login" method="POST">
              <div class="form-group">
                <label for="email" class="a_frm">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control"
                  placeholder="Enter Email"
                />
              </div>
              <div class="form-group">
                <label for="password" class="a_frm">Password</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                  placeholder="Enter Password"
                />
              </div>
              <button type="submit" class="btn btn-primary btn-block a_frm"  style="background-color: #D9B310;border: none;">Login</button>
            </form>
            <p class="lead mt-4 a_frm">
              No Account? <a href="/users/register" class="a_frm a_hov">Register</a>
            </p>
          </div>
        </div>
      </div>
    </body>

      